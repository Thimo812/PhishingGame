@using PhishingGame.Core

<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <RouteView 
            RouteData="routeData" 
            DefaultLayout="routeData.PageType.IsAssignableTo(typeof(IGameView)) ? 
                           typeof(Layout.GameLayout) : 
                           typeof(Layout.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PhishingGame.Blazor.Components.Pages.SessionNotFound />
    </NotFound>
</Router>
