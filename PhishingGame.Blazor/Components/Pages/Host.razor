@using Radzen.Blazor
@using Core
@using Core.Models

@inject ISessionManager _sessionManager
@page "/"

<RadzenButton Click="@OnClick">Start sessie</RadzenButton>

<p>@Session?.SessionId</p>

@code {
    public Session? Session { get; set; }

    public void OnClick()
    {
        var session = _sessionManager.CreateSession(new());
        session.Initialize();
        Session = session;
    }
}
