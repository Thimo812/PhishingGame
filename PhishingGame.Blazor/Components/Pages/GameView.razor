@using PhishingGame.Blazor.Components.Pages
@page "/session/{SessionId:guid}"

@if (CurrentState == null)
{
    <SessionNotFound />
}

else if (!ContainsPlayer && !IsHost)
{
    if (Session.CanJoin)
    {
        <RegisterView OnSubmit="@RegisterPlayer" />
    }
    else
    {
        <SessionClosed />
    }
}

else 
{
    <DynamicComponent Type="@ViewType" Parameters="@CurrentState.Parameters" @key=Session?.CurrentState />
}
